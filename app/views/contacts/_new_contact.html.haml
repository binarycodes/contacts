= form_for @contact do |f|
  = render "error_messages", :target => @contact
  %div.contact_form_field
    = f.label :first_name
    = f.text_field :first_name

  %div.contact_form_field
    = f.label :last_name
    = f.text_field :last_name

  %div.contact_form_field
    = f.label :remarks
    = f.text_area :remarks , :rows => 3, :cols=> 34

  = f.fields_for :phones do |builder|
    = render :partial => "phone_fields", :locals => { :f => builder}

  = link_to_add_fields "Add Contact Nos", f, :phones
  %p.section_gap

  %div.contact_form_field
    = f.submit
